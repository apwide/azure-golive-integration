{
  "id": "{{taskid}}",
  "name": "ApwideGoliveTrackDeployment{{tag}}",
  "friendlyName": "[Golive] Track deployment({{tag}})",
  "description": "Send deployment information to Apwide Golive for Jira",
  "author": "apwide",
  "helpMarkDown": "Learn more about Apwide Golive and Environment Tracking [here](https://www.apwide.com/documentation/cloud/track-environments)",
  "category": "Build",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": "{{major}}",
    "Minor": "{{minor}}",
    "Patch": "{{patch}}"
  },
  "minimumAgentVersion": "1.95.0",
  "instanceNameFormat": "Service Endpoint Build Task $(project)",
  "inputs": [
    {
      "name": "serviceConnection",
      "type": "connectedService:golive",
      "label": "Service Connection",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Apwide Golive for Jira connection to use. If needed, select 'Project settings', and create a new 'Service Connection' of type 'Apwide Golive for Jira'."
    },
    {
      "name": "applicationId",
      "type": "pickList",
      "label": "Application",
      "required": false,
      "helpMarkDown": "Application of the target environment",
      "properties": {
        "EditableOptions": "True"
      },
      "visibleRule": "serviceConnection > 0"
    },
    {
      "name": "environmentId",
      "type": "pickList",
      "label": "Environment",
      "required": true,
      "helpMarkDown": "Target environment the version is deployed to",
      "properties": {
        "EditableOptions": "True"
      },
      "visibleRule": "applicationId > 0"
    },
    {
      "name": "versionName",
      "type": "string",
      "label": "Version Name",
      "required": true,
      "helpMarkDown": "Deployed version",
      "visibleRule": "environmentId > 0"
    },
    {
      "name": "buildNumber",
      "type": "string",
      "label": "Build Number",
      "required": false,
      "defaultValue": "$(Build.BuildNumber)",
      "helpMarkDown": "Build number",
      "visibleRule": "environmentId > 0"
    },
    {
      "name": "description",
      "type": "multiline",
      "label": "Description",
      "required": false,
      "defaultValue": "<b>âœ… Job #$(Build.BuildId) - $(Build.DefinitionName)</b>\nRequested by: $(Build.RequestedFor) \nBranch: $(Build.SourceBranchName)",
      "helpMarkDown": "Description of the deployment",
      "properties": {
        "resizable": "true",
        "rows": "10",
        "maxLength": "2000"
      },
      "visibleRule": "environmentId > 0"
    },
    {
      "name": "issueKeys",
      "type": "string",
      "label": "Jira Issue Keys",
      "required": false,
      "helpMarkDown": "Comma separated list of Jira Issue Keys that are deployed. Ex: ECOM-3412,ECOM-6783,PAY-98",
      "visibleRule": "environmentId > 0"
    }
  ],
  "dataSourceBindings": [
    {
      "target": "applicationId",
      "endpointId": "$(serviceConnection)",
      "dataSourceName": "applications",
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\":\"{{{name}}}\"}"
    },
    {
      "target": "environmentId",
      "endpointId": "$(serviceConnection)",
      "dataSourceName": "environments",
      "parameters": {
        "applicationId": "$(applicationId)"
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\":\"{{{name}}}\"}"
    }
  ],
  "execution": {
    "Node": {
      "target": "main.js",
      "argumentFormat": ""
    },
    "PowerShell3": {
      "target": "sample.ps1"
    }
  }
}
