{
  "scripts": {
    "build": "tsc && npm run tslint:fix && npm run test && webpack --config=webpack.config.js --env ${BUILD_ENV}",
    "build:package": "npm run build && npm run package",
    "clean": "rimraf ./dist",
    "clean:build": "npm run clean && npm run build",
    "tslint": "tslint --project tsconfig.json --config tslint.json",
    "tslint:fix": "tslint --project tsconfig.json --fix --config tslint.json",
    "test": "tsc && mocha src/custom-task/tests/_suite.js",
    "start": "node --no-deprecation dist/custom-task/main.js",
    "create:task": "tfx build tasks create --task-id 282ea6d5-b7b2-49eb-897a-a68bf88c4910 --token ${ADO_PAT} --service-url ${ADO_ACCOUNT_URI} || true",
    "clean:task": "tfx build tasks delete --task-id 282ea6d5-b7b2-49eb-897a-a68bf88c4910 --token ${ADO_PAT} --service-url ${ADO_ACCOUNT_URI} || true",
    "publish:task": "tfx build tasks upload --task-path dist/custom-task --overwrite --token ${ADO_PAT} --service-url ${ADO_ACCOUNT_URI} ",
    "clean:publish:task": "npm run clean:task && npm run publish:task",
    "package": "cd dist && tfx extension create --manifest-globs base.json ${BUILD_ENV}.json --output-path ${BUILD_ENV}.vsix --publisher ${DEV_PUBLISHER} && cd ../",
    "publish": "tfx extension publish --vsix dist/${BUILD_ENV}.vsix --token ${ADO_PAT}",
    "dev": "npm run build && npm run package && npm run publish && npm run clean:publish:task",
    "dev:task": "npm run build && npm run clean:publish:task"
  },
  "devDependencies": {
    "@types/mocha": "10.0.3",
    "@types/node": "18.11.9",
    "@types/q": "1.5.7",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "mocha": "10.2.0",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "request-promise-native": "^1.0.9",
    "rimraf": "5.0.5",
    "string-replace-loader": "2.1.1",
    "style-loader": "^1.0.0",
    "sync-request": "^6.1.0",
    "tfx-cli": "^0.6.3",
    "ts-loader": "^5.3.0",
    "ts-node": "10.9.1",
    "tslint": "6.1.3",
    "tslint-loader": "3.5.4",
    "typescript": "5.2.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.1.2"
  },
  "name": "azure-pipelines-custom-task",
  "private": true,
  "version": "0.1.0",
  "dependencies": {
    "azure-devops-node-api": "10.2.2",
    "azure-pipelines-task-lib": "4.4.0"
  }
}
